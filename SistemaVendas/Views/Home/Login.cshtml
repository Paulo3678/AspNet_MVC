@model LoginModel

<style>
    .login-form {
        width: 340px;
        margin: 50px auto;
        font-size: 15px;
    }

        .login-form form {
            margin-bottom: 15px;
            background: #f7f7f7;
            box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
            padding: 30px;
        }

        .login-form h2 {
            margin: 0 0 15px;
        }

    .form-control, .btn {
        min-height: 38px;
        border-radius: 2px;
    }

    .btn {
        font-size: 15px;
        font-weight: bold;
    }
</style>

<div class="login-form">
    <form asp-controller="Home" asp-action="Login" method="post">
        <h2 class="text-center">Sistema vendas</h2>
        <div class="form-group mb-3">
            <input type="text" class="form-control" asp-for="Email" name="Email" placeholder="E-mail">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <input type="password" class="form-control" asp-for="Senha" name="Senha" placeholder="Senha">
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
        <div class="form-group mb-3f">
            <button type="submit" class="btn w-100 btn-primary btn-block">Entrar</button>
        </div>
        <div class="d-flex justify-content-between mt-3">
            <div class="">
                <label class="float-left form-check-label"><input type="checkbox"> Lembrar acesso</label>
            </div>
            <div class="">
                <a href="#" class="float-right">Esqueceu a senha?</a>
            </div>
        </div>
    </form>
    <p class="text-center ">Não tem uma conta?<a href="#">Crie aqui!</a></p>
</div>